<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_gold_pub_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="出售数量(单位：万金)"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textColorHint="@android:color/holo_red_light" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_gold_pub_proportion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="比例 (1元所能购买到的数量) "
            android:inputType="number"
            android:maxLength="5"
            android:singleLine="true"
            android:textColorHint="@android:color/holo_red_light" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_gold_pub_deal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="交易方式 (如：支付宝转账) "
            android:maxLength="10"
            android:singleLine="true"
            android:textColorHint="@android:color/holo_red_light" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="是否支持小额交易："
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>
    <RadioGroup
        android:id="@+id/activity_gold_pub_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/activity_gold_pub_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是"/>
        <RadioButton
            android:id="@+id/activity_gold_pub_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否"/>
    </RadioGroup>

    <android.support.v7.widget.CardView
        android:id="@+id/activity_gold_pub_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>
</LinearLayout>