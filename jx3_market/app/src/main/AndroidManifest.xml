<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chan.jx3_market">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Bomb sdk -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_LOGS"/>

    <application
        android:name="base.JX3Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".viewimpl.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewimpl.RegisterActivity">

        </activity>
        <activity android:name=".viewimpl.MainActivity"
            >

        </activity>
        <activity android:name=".viewimpl.AboutActivity"
            android:label="关于"
            >

        </activity>

        <activity android:name=".viewimpl.AccountInfoPubActivity"
            android:label="账号信息发布"
            >

        </activity>
        <activity android:name=".viewimpl.AccountInfoListActivity"
            android:label="账号信息列表"
            >

        </activity>

        <activity android:name=".viewimpl.GoldInfoPubActivity"
            android:label="金币信息发布"
            >

        </activity>
    </application>

</manifest>
