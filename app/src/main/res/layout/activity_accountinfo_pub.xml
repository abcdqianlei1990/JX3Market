<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/account_pub_profession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="门派(必填)"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColorHint="@android:color/holo_red_light" />
                </android.support.design.widget.TextInputLayout>

                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@android:color/holo_red_light" />
            <RadioGroup
                android:id="@+id/account_pub_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/account_pub_rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_type_1"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/account_pub_rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_type_2"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/account_pub_rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_type_3"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/account_pub_rb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_type_4"/>
            </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/account_pub_pveScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="pve装分(必填)"
                        android:maxLength="5"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textColorHint="@android:color/holo_red_light" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/account_pub_pvpScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="pvp装分(必填)"
                        android:inputType="number"
                        android:maxLength="5"
                        android:singleLine="true"
                        android:textColorHint="@android:color/holo_red_light" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/account_pub_zhangjie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="战阶(没有请写0)"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/account_pub_jjc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="竞技场段位(没有请写0)"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="限量"
                    android:maxLength="30"
                    android:textColorHint="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_hair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="发型"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_clothes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="成衣"
                    android:maxLength="30"
                    android:textColorHint="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_mount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="坐骑"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_face"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="脸型"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@android:color/holo_red_light" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_expscore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="资历(必填)"
                    android:inputType="number"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:textColorHint="@android:color/holo_red_light" />
            </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_pet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="宠物（说亮点）"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_calling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="称号(说亮点)"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/account_pub_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="其他"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/account_pub_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="确认提交"
                    android:padding="5dp"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>