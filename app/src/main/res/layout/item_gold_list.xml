<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >
    <LinearLayout
        android:id="@+id/item_gold_list_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/item_gold_list_totalcount_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出售数量："/>

        <TextView
            android:id="@+id/item_gold_list_totalcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"/>
        <TextView
            android:id="@+id/item_gold_list_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="万金"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_gold_list_ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_gold_list_proportion_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比例："/>

        <TextView
            android:id="@+id/item_gold_list_proportion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"/>
        <TextView
            android:id="@+id/item_gold_list_proportion_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="（1元所能购买的数量）"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_gold_list_ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_gold_list_dealtype_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易方式："/>

        <TextView
            android:id="@+id/item_gold_list_dealtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_gold_list_ll4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_gold_list_supportlittle_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支持小额交易："/>

        <TextView
            android:id="@+id/item_gold_list_supportlittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>

