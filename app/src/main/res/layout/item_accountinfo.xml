<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_accountinfo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_toLeftOf="@+id/item_accountinfo_title_btn"
            android:layout_alignBaseline="@+id/item_accountinfo_title_btn"
            android:textColor="@color/commonTextColorGrayColor_3"
            android:text="1.霸刀 # 成男"/>
        <TextView
            android:id="@+id/item_accountinfo_title_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取联系方式"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_common_black_border"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/item_accountinfo_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/item_accountinfo_pvpinfo_block_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_accountinfo_pvp_block_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PVP信息"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/top_arrow_line_2"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_line_with_top_arrow"/>
            <TextView
                android:id="@+id/item_accountinfo_pvp_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="装分：17000"/>

            <TextView
                android:id="@+id/zhanjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="战阶：14"/>
            <TextView
                android:id="@+id/jjcLv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="jjc段位：12"/>

        </LinearLayout>

        <View
            android:id="@+id/item_accountinfo_block_line2"
            android:layout_below="@+id/jjcLv"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/commonTextColorGrayColor_3"/>
        <LinearLayout
            android:id="@+id/item_accountinfo_pveinfo_block_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_accountinfo_pve_block_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PVE信息"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/top_arrow_line_3"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_line_with_top_arrow"/>

            <TextView
                android:id="@+id/item_accountinfo_pve_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="装分：17000"/>
        </LinearLayout>



        <View
            android:id="@+id/item_accountinfo_block_line3"
            android:layout_below="@+id/item_accountinfo_pve_score"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/commonTextColorGrayColor_3"/>

        <LinearLayout
            android:id="@+id/item_accountinfo_outlook_block_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_accountinfo_outlook_block_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_accountinfo_pvp_block_line3"
                android:text="外观信息"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/top_arrow_line_4"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/item_accountinfo_outlook_block_title"
                android:background="@drawable/ic_line_with_top_arrow"/>

            <TextView
                android:id="@+id/hair"
                android:layout_below="@+id/top_arrow_line_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="发型：老白发"/>


            <TextView
                android:id="@+id/limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hair"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="限量：五红"/>

            <TextView
                android:id="@+id/face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/limit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="脸型：阴阳脸"/>

            <TextView
                android:id="@+id/clothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/face"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="成衣：最新的"/>

            <TextView
                android:id="@+id/mount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clothes"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="坐骑：里飞沙"/>
        </LinearLayout>

        <View
            android:id="@+id/item_accountinfo_block_line4"
            android:layout_below="@+id/mount"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/commonTextColorGrayColor_3"/>

        <LinearLayout
            android:id="@+id/item_accountinfo_others_block_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/item_accountinfo_other_block_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_accountinfo_pvp_block_line4"
                android:text="其他信息"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/top_arrow_line_5"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/item_accountinfo_other_block_title"
                android:background="@drawable/ic_line_with_top_arrow"/>
            <TextView
                android:id="@+id/expScore"
                android:layout_below="@+id/top_arrow_line_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="资历：40000"/>

            <TextView
                android:id="@+id/calling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expScore"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="称号：侠客行"/>

            <TextView
                android:id="@+id/pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calling"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="宠物：都有"/>

            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pet"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="其他描述：其他描述"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>